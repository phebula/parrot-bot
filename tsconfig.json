{
	"compilerOptions": {
		"outDir": "out",
		"module": "commonjs",
		"target": "es2021",
		"esModuleInterop": true,
		"lib": ["es6", "dom"],
		"sourceMap": true,
		"types": ["node"],
		"typeRoots": [
			"node_modules/@types"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules"
	]
}